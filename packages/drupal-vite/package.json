{
  "name": "drupal-vite",
  "author": "Octahedroid <opensource@octahedroid.com>",
  "version": "0.4.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "description": "Vite plugin for Drupal integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "vite-plugin",
    "drupal",
    "decoupled"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts"
    },
    "./config": {
      "types": "./dist/config.d.ts"
    }
  },
  "repository": {
    "url": "https://github.com/octahedroid/drupal-decoupled/tree/main/packages/drupal-vite"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "ts-types": "tsc --emitDeclarationOnly --outDir dist",
    "build": "node ./esbuild.js && pnpm ts-types && cp client.d.ts dist/client.d.ts && cp config.d.ts dist/config.d.ts"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@urql/core": "catalog:",
    "esbuild": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "dependencies": {
    "drupal-auth-client": "^1.0.2"
  }
}
